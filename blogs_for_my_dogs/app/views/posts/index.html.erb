<html>
<head>
	<title></title>
</head>
<body>

	<section class="posts">
		<% @posts.each do |post| %>
			<div class="post-div">
				<h4><%= post.author %></h4>
				<br>
				<div class="content"><%= truncate post.content, length: 500 %></div>
				<%= link_to 'Read more', post_path(post.id) %>
				<br>
				</h7>Posted at: <%= post.created_at %></h7>
				<br>
				
				<br>
			</div>
		<% end %>
	</section>

	<br>
	<br>
		<%= link_to('Logout', destroy_user_session_path, :method => :delete) %> 
		<%= link_to('New Post', '/posts/new', :method => :get) %>


	<%= render :partial => 'footer' %>
</body>

</html>